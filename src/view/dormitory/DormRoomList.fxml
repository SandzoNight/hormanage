<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="720.0" prefWidth="1000.0" styleClass="body" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.view.DormRoomListController">
   <children>
      <BorderPane>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" styleClass="main-content" BorderPane.alignment="CENTER">
               <top>
                  <FlowPane prefHeight="113.0" prefWidth="842.0" styleClass="page-title-container" BorderPane.alignment="CENTER">
                     <children>
                        <Label styleClass="page-title" text="จัดการห้องพัก" />
                     </children>
                  </FlowPane>
               </top>
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                           <children>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="278.0" styleClass="floor-select-container">
                                 <children>
                                    <Label text="ชั้นที่">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                    </Label>
                                    <ChoiceBox fx:id="floorList" prefHeight="40.0" prefWidth="85.0" />
                                    <Button fx:id="floorSelectBtn" mnemonicParsing="false" onAction="#floorSelected" text="ยืนยัน" />
                                 </children>
                              </HBox>
                              <Button mnemonicParsing="false" prefHeight="55.0" prefWidth="201.0" styleClass="buttons" text="จัดการประเภทห้องพัก" textAlignment="CENTER" />
                              <Button mnemonicParsing="false" prefHeight="55.0" prefWidth="130.0" styleClass="buttons" text="เพิ่มห้องพัก" textAlignment="CENTER" />
                           </children>
                        </HBox>
                        <ScrollPane prefHeight="449.0" prefWidth="840.0" style="-fx-alignment: center;">
                           <content>
                              <VBox prefHeight="446.0" prefWidth="838.0">
                                 <children>
                                    <GridPane alignment="CENTER">
                                      <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                      </columnConstraints>
                                      <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                      </rowConstraints>
                                       <children>
                                          <Label styleClass="td-head" text="ห้อง" GridPane.halignment="CENTER">
                                             <GridPane.margin>
                                                <Insets />
                                             </GridPane.margin>
                                          </Label>
                                          <Label styleClass="td-head" text="สถานะ (ว่าง)" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                                          <Label styleClass="td-head" text="ดำเนินการ" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
                                       </children>
                                    </GridPane>
                                    <GridPane fx:id="roomListGridPane" alignment="CENTER" styleClass="tbody">
                                      <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                      </columnConstraints>
                                      <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                      </rowConstraints>
                                    </GridPane>
                                 </children>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </center>
            </BorderPane>
         </center>
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="160.0" styleClass="side-bar" BorderPane.alignment="CENTER">
               <children>
                  <Hyperlink fx:id="backBtn" focusTraversable="false" onAction="#gotoHome" styleClass="back-btn">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Hyperlink>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
   <stylesheets>
      
      <!-- Use these tag when compile -->
      <URL value="@/dist/css/mainstyle.css" />
      <URL value="@/dist/css/roomlistpage.css" />
      <!-- /////////////////////////// -->
      
<!--      <URL value="@../../dist/css/mainstyle.css" />
      <URL value="@../../dist/css/roomlistpage.css" />
      -->
   </stylesheets>
</VBox>
